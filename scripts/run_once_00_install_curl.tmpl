{{- if eq .chezmoi.os "linux" -}}
#!/bin/zsh
set -euo pipefail

if command -v curl >/dev/null 2>&1; then
  exit 0
fi

if command -v apt-get >/dev/null 2>&1; then
  sudo apt-get update
  sudo apt-get install -y curl
else
  echo "curl not found and apt-get unavailable; install curl manually." >&2
  exit 1
fi
{{- else if eq .chezmoi.os "darwin" -}}
#!/bin/zsh
exit 0
{{- else -}}
#!/bin/zsh
echo "Unsupported OS for auto-installing curl." >&2
exit 1
{{- end -}}
